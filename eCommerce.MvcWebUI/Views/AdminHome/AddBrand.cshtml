@{
    ViewBag.Title = "AddBrand";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<div class="row">
    @*<div class="col-md-1"></div>*@
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Marka Ekle</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" method="post" enctype="multipart/form-data" action="@Url.Action("AddBrand","AdminHome")">
                <div class="box-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Marka Adı</label>

                        <div class="col-sm-10">
                            <input type="text" name="BrandName" class="form-control" placeholder="Marka Adınızı yazınız...">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Marka Açıklama</label>

                        <div class="col-sm-10">
                            <input type="text" name="BrandDescription" class="form-control" placeholder="Açıklama Giriniz...">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile" class="col-sm-2 control-label">Marka Resmi</label>
                        <div class="col-sm-10">
                            <input type="file" name="fileUpload" id="exampleInputFile">

                            @*<p class="help-block">Example block-level help text here.</p>*@
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    @*<button type="submit" class="btn btn-default">Cancel</button>*@
                    <button type="submit" class="btn btn-info pull-right">Kaydet</button>
                </div>
                <!-- /.box-footer -->
            </form>
        </div>
    </div>
    @*<div class="col-md-1"></div>*@
</div>